@model IEnumerable<CourseHelperUser>
@{
    ViewBag.Title = "List of accounts";
}


<main role="main">
    <div class="container">
        <div class="title-header">
            <h1>User Account</h1>
            <br>
            <a class="btn btn-primary" asp-action="Create">Create User</a>
            <a class="btn btn-primary" asp-action="CreateFaculty">Create Faculty</a>
        </div>
    </div>
    <div class="content-container">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <table class="table mb-3 content-table">
            <tr><td align="center"><b>First Name</b></td><td align="center"><b>Last Name</b></td><td align="center"><b>UserName</b></td><td align="center"></td></tr>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
            }
            else
            {
                foreach (CourseHelperUser user in Model)
                {
                    <tr>
                        <td align="center"><p>@user.FirstName</p></td>
                        <td align="center"><p>@user.LastName</p></td>
                        <td align="center"><p>@user.UserName</p></td>
                        <td align="center">
                            <form asp-action="Delete" asp-area="Admin" asp-route-id="@user.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit"
                                   asp-route-id="@user.Id">Edit</a>
                                <button type="submit"
                                        class="btn btn-sm btn-danger">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </table>
        <div>
        </div>
    </div>
</main>
